---
interface Props {
  original: string;
  link: { url: string; isInternal: boolean } | null;
  variant?: "prereq" | "coreq";
}

const { original, link, variant = "prereq" } = Astro.props;

const internalClasses = variant === "coreq"
  ? "rounded bg-wiki-link/20 px-2 py-1 font-mono text-wiki-link hover:bg-wiki-link/30 transition-colors no-underline"
  : "rounded bg-illinois-orange/20 px-2 py-1 font-mono text-illinois-orange hover:bg-illinois-orange/30 transition-colors no-underline";

const plainClasses = variant === "coreq"
  ? "rounded bg-wiki-link/10 px-2 py-1 font-mono text-wiki-muted"
  : "rounded bg-wiki-border px-2 py-1 font-mono text-wiki-muted";
---

{
  link ? (
    link.isInternal ? (
      <a
        href={link.url}
        class="rounded bg-illinois-orange/20 px-2 py-1 font-mono text-illinois-orange hover:bg-illinois-orange/30 transition-colors no-underline"
      >
        {original}
      </a>
    ) : (
      <a
        href={link.url}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-1 rounded bg-wiki-border px-2 py-1 font-mono text-wiki-muted hover:bg-wiki-border/80 hover:text-wiki-text transition-colors no-underline"
      >
        {original}
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 20 20"
          fill="currentColor"
          class="w-3 h-3"
        >
          <path
            fill-rule="evenodd"
            d="M4.25 5.5a.75.75 0 00-.75.75v8.5c0 .414.336.75.75.75h8.5a.75.75 0 00.75-.75v-4a.75.75 0 011.5 0v4A2.25 2.25 0 0112.75 17h-8.5A2.25 2.25 0 012 14.75v-8.5A2.25 2.25 0 014.25 4h5a.75.75 0 010 1.5h-5z"
            clip-rule="evenodd"
          />
          <path
            fill-rule="evenodd"
            d="M6.194 12.753a.75.75 0 001.06.053L16.5 4.44v2.81a.75.75 0 001.5 0v-4.5a.75.75 0 00-.75-.75h-4.5a.75.75 0 000 1.5h2.553l-9.056 8.194a.75.75 0 00-.053 1.06z"
            clip-rule="evenodd"
          />
        </svg>
      </a>
    )
  ) : (
    <span class="rounded bg-wiki-border px-2 py-1 font-mono text-wiki-muted">
      {original}
    </span>
  )
}
